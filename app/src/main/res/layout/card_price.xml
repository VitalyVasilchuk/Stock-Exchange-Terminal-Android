<?xml version="1.0" encoding="utf-8"?>
<!--android:background="@color/primary_light"-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="1dp"
        app:contentPadding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"

            android:paddingBottom="2dp"
            android:paddingTop="3dp">

            <ImageView
                android:id="@+id/image_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:contentDescription="coin icon"
                android:cropToPadding="false"
                android:paddingLeft="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/doge" />

            <TextView
                android:id="@+id/currency_pair"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:text="DOGE/USDT" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="vertical"
                android:paddingRight="8dp">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="123456.12345" />

                <TextView
                    android:id="@+id/priceUsd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:textColor="@color/balance_disable"
                    android:textSize="12sp"
                    tools:text="($1.2)" />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="0"
                android:adjustViewBounds="false"
                android:contentDescription="alert icon"
                android:cropToPadding="false"
                android:paddingBottom="4dp"
                android:paddingLeft="-8dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_alert_off" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>